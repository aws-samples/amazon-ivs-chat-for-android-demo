<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="item"
            type="com.amazon.ivs.chatdemo.repository.networking.models.ChatMessageResponse" />
    </data>

        <FrameLayout
            android:id="@+id/green_pill"
            android:layout_width="wrap_content"
            android:paddingHorizontal="@dimen/padding_normal"
            android:layout_height="48dp"
            android:layout_margin="@dimen/margin_small"
            android:elevation="@dimen/elevation_normal"
            android:background="@drawable/bg_pill_green">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/connected_to_chat"
                app:layout_constraintStart_toEndOf="@id/chat_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </FrameLayout>

</layout>
